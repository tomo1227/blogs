{
  "editor.guides.bracketPairs": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.markdownlint": "explicit"
  },
  "markdownlint.run": "onSave",
  "markdownlint.config": {
    "MD025": false,
    "MD033": false,
    "MD034": false
  },
  "[jsonc][json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.autoIndent": "advanced",
    "files.insertFinalNewline": true
  },
  "[yaml][dockercompose]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true
  },
  "gitmoji.onlyUseCustomEmoji": true, // カスタマイズした絵文字のみ表示する
  "gitmoji.addCustomEmoji": [
    // 絵文字のカスタマイズ
    {
      "emoji": "✨",
      "code": ":sparkles:",
      "description": "記事修正"
    },
    {
      "emoji": "🎉",
      "code": ":tada:",
      "description": "新記事の追加"
    },
    {
      "emoji": "🐛",
      "code": ":bug:",
      "description": "バグ修正"
    },
    {
      "emoji": "🚀",
      "code": ":rocket:",
      "description": "パフォーマンスや機能の改善"
    },
    {
      "emoji": "♻️",
      "code": ":recycle:",
      "description": "リファクタリング"
    },
    {
      "emoji": "📚",
      "code": ":books:",
      "description": "ドキュメント"
    },
    {
      "emoji": "💚",
      "code": ":green_heart:",
      "description": "テストやCIの修正・改善"
    },
    {
      "emoji": "👕",
      "code": ":shirt:",
      "description": "Lintエラーの修正やコードスタイルの修正"
    },
    {
      "emoji": "🚿",
      "code": ":shower:",
      "description": "不要な機能・使われなくなった機能の削除"
    },
    {
      "emoji": "🔧",
      "code": ":wrench:",
      "description": "依存パッケージなどのアップデート"
    },
    {
      "emoji": "👷",
      "code": ":construction_worker:",
      "description": "ビルドシステムや外部依存関係の変更"
    }
  ],
  "todo-tree.general.tags": [
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "REVIEW",
    "OPTIMIZE",
    "CHANGED",
    "NOTE",
    "WARNING"
  ],
  "todo-tree.highlights.defaultHighlight": {
    "foreground": "#000000",
    "background": "#2C7CFF",
    "iconColor": "#24ff41",
    "opacity": 45
  },
  "todo-tree.highlights.customHighlight": {
    "HACK": {
      "icon": "zap"
    },
    "FIXME": {
      "icon": "flame",
      "background": "#f11e1e",
      "iconColor": "#f11e1e"
    },
    "TODO": {
      "icon": "check-circle"
    },
    "XXX": {
      "icon": "x-circle",
      "background": "#f8831d",
      "iconColor": "#f8831d"
    },
    "REVIEW": {
      "icon": "pin"
    },
    "OPTIMIZE": {
      "icon": "rocket",
      "background": "#f8831d",
      "iconColor": "#f8831d"
    },
    "CHANGED": {
      "icon": "issue-reopened"
    },
    "NOTE": {
      "icon": "thumbsup"
    },
    "WARNING": {
      "icon": "alert",
      "background": "#f11e1e",
      "iconColor": "#f11e1e"
    }
  },
  "cSpell.ignorePaths": [
    ".vscode",
    ".devcontainer/devcontainer.json",
  ],
  "cSpell.words": [
    "devcontainer",
    "devcontainers",
    "gitmoji",
    "println",
    "rustc"
  ]
}
