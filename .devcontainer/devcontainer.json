{
	"name": "blogs",
    "dockerComposeFile": [
        "../compose.yml"
    ],
    "service": "devcontainer",
    "workspaceFolder": "/workspace",
	"customizations": {
		"vscode": {
			"settings": {
				"editor.guides.bracketPairs": true,
				"editor.formatOnSave": true,
				"editor.codeActionsOnSave": {
					"source.fixAll.markdownlint": "explicit"
				},
				"markdownlint.run": "onType",
				"markdownlint.config": {
					"MD025": false,
					"MD033": false
				},
				"[yaml]": {
					"editor.defaultFormatter": "redhat.vscode-yaml",
					"editor.insertSpaces": true,
					"editor.tabSize": 2,
					"editor.formatOnSave": true,
					"files.insertFinalNewline": true
				},
				"[json]": {
					"editor.defaultFormatter": "esbenp.prettier-vscode",
					"editor.insertSpaces": true,
					"editor.tabSize": 2,
					"editor.formatOnSave": true,
					"files.insertFinalNewline": true
				},
				"gitmoji.onlyUseCustomEmoji": true, // カスタマイズした絵文字のみ表示する
				"gitmoji.addCustomEmoji": [         // 絵文字のカスタマイズ
					{
						"emoji": "✨",
						"code": ":sparkles:",
						"description": "記事修正"
					},
					{
						"emoji": "🎉",
						"code": ":tada:",
						"description": "新記事の追加"
					},
					{
						"emoji": "🐛",
						"code": ":bug:",
						"description": "バグ修正"
					},
					{
						"emoji": "🚀",
						"code": ":rocket:",
						"description": "パフォーマンスや機能の改善"
					},
					{
						"emoji": "♻️",
						"code": ":recycle:",
						"description": "リファクタリング"
					},
					{
						"emoji": "📚",
						"code": ":books:",
						"description": "ドキュメント"
					},
					{
						"emoji": "💚",
						"code": ":green_heart:",
						"description": "テストやCIの修正・改善"
					},
					{
						"emoji": "👕",
						"code": ":shirt:",
						"description": "Lintエラーの修正やコードスタイルの修正"
					},
					{
						"emoji": "🚿",
						"code": ":shower:",
						"description": "不要な機能・使われなくなった機能の削除"
					},
					{
						"emoji": "🔧",
						"code": ":wrench:",
						"description": "依存パッケージなどのアップデート"
					},
					{
						"emoji": "👷",
						"code": ":construction_worker:",
						"description": "ビルドシステムや外部依存関係の変更"
					}
				]
			},
			"extensions": [
				"yzhang.markdown-all-in-one",
				"streetsidesoftware.code-spell-checker",
				"DavidAnson.vscode-markdownlint",
				"shd101wyy.markdown-preview-enhanced",
				"bierner.github-markdown-preview",
				"mushan.vscode-paste-image",
				// json, yaml formatter
				"esbenp.prettier-vscode",
				"redhat.vscode-yaml",
				// Git関連
				"GitHub.vscode-pull-request-github",
				"github.vscode-github-actions",
				"mhutchie.git-graph",
				"eamodio.gitlens",
				"donjayamanne.githistory",
				"seatonjiang.gitmoji-vscode",
				// その他
				"naumovs.color-highlight",
				"Gruntfuggly.todo-tree",
				"oderwat.indent-rainbow",
				"pkief.material-icon-theme",
				"ms-azuretools.vscode-docker"
			]
		}
	},
	"postCreateCommand": "sh .devcontainer/scripts/post_create.sh",
	"postStartCommand": "sh .devcontainer/scripts/post_start.sh ${containerWorkspaceFolder}"
}